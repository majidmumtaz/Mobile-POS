<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_container"
    android:background="#ffcccccc"  >
  <fragment android:name="com.setecs.android.mpos.fragments.CategoryFragment"
        android:id="@+id/category_pane"
        android:layout_width="0dip"
        android:layout_height="match_parent" 
        android:layout_weight="2"
        android:layout_margin="10dip" />
  <fragment android:name="com.setecs.android.mpos.fragments.MenuItemsFragment"
      android:id="@+id/menu_pane"
      android:layout_width="0dip" 
      android:layout_weight="3"
      android:layout_height="match_parent"
      android:layout_margin="10dip" />
   <fragment android:name="com.setecs.android.mpos.fragments.OrderFragment"
        android:id="@+id/order_pane"
        android:layout_width="0dip"
        android:layout_height="match_parent" 
        android:layout_weight="2"
        android:layout_margin="10dip" />
</LinearLayout>